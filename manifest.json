{
  "manifest_version": 2,

  "name": "Drive Pass",
  "description": "This extension fetches a password from a google spreadsheet using oAuth and the Google Drive api",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/drive-pass19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "https://*.google.com/*",
    "https://docs.google.com/feeds/*",
    "http://spreadsheets.google.com/feeds/*",
    "https://spreadsheets.google.com/feeds/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["libs/jquery-2.0.3.min.js","libs/contentscript.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://spreadsheets.google.com; object-src 'self'",
  "web_accessible_resources":[
    "chrome_ex_oauth.html"
  ]
}