{
  "manifest_version": 2,
  "name": "DrivePass",
  "description": "This extension fetches a password from a google spreadsheet using oAuth and the Google Drive api",
  "icons": { 
    "16": "img/drive-pass16.png",
    "48": "img/drive-pass48.png",
    "128": "img/drive-pass128.png"
  },
  "version": "1.1",
  "minimum_chrome_version": "22.0",
  "browser_action": {
    "default_icon": "img/drive-pass19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus"
  ],
  "requirements": {
      "plugins": {
         "npapi": false
      }
   },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["js/contentscript.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  // http://developer.chrome.com/extensions/contentSecurityPolicy
  // http://www.html5rocks.com/en/tutorials/security/content-security-policy/
  "content_security_policy": "default-src 'none'; script-src 'self' https://spreadsheets.google.com; connect-src https://spreadsheets.google.com; img-src 'self'; style-src 'self'",
  "web_accessible_resources":[
    "chrome_ex_oauth.html"
  ]
}